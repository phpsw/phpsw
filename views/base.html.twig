<!DOCTYPE html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ block('title') ? (block('title') ~ ' Â· ') | raw }}{{ app.title }}</title>
    <meta name="description" content="{{ app.description }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="stylesheet" href="/rev/{{ 'now' | date('YmdHi') }}/css/vendor.css">
    <link rel="stylesheet" href="/rev/{{ 'now' | date('YmdHi') }}/css/main.css">
  </head>
  <body>
    {% block header %}
      {{ include('header.html.twig') }}
    {% endblock %}

    <div class="content">
      {% block nav %}
        {{ include('nav.html.twig') }}
      {% endblock %}

      {% if block('hero') | trim %}
        <div class="hero hero--{{ block('hero_modifier') | trim | default('default') }}">
          <div class="hero__image" style="background-image: {{ 'url' in block('hero') ? block('hero') | trim : ("url('" ~ block('hero') | trim ~ "')") }}"></div>
          <div class="hero__overlay"></div>

          {{ include('bar.html.twig') }}
        </div>
      {% else %}
        {{ include('bar.html.twig') }}
      {% endif %}

      <main>
        {% block main %}
          <div class="container">
            <header class="page-header">
              {% block page_header %}
                <h1>{{ block('title') }}</h1>
              {% endblock %}
            </header>

            {{ block('content') }}
          </div>
        {% endblock %}
      </main>
    </div>

    {% block footer %}
      {{ include('footer.html.twig') }}
    {% endblock %}

    <script src="//cdn.embedly.com/widgets/platform.js"></script>
    <script src="//maps.google.com/maps/api/js?sensor=true"></script>

    <script src="/rev/{{ 'now' | date('YmdHi') }}/js/vendor.js"></script>
    <script src="/rev/{{ 'now' | date('YmdHi') }}/js/main.js"></script>
  </body>
</html>
